ier=0;

# FORTRAN nufft3d1f90(int[1] nj, double[] xj, double[] yj, double[] zj, dcomplex[] cj, int[1] iflag, double[1] eps, int[1] ms, int[1] mt, int[1] mu, inout dcomplex[] fk, inout int[1] ier);


